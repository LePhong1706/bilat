@model ProductViewModel
@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<div class="page-header-breadcrumb mb-3">
    <div class="d-flex align-items-center justify-content-between">
        <h1 class="page-title fw-medium fs-18 mb-0">Sửa sản phẩm</h1>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Sản phẩm</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sửa</li>
        </ol>
    </div>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-xl-8">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Thông tin sản phẩm</div>
                </div>
                <div class="card-body">
                    <div class="row gy-3">
                        <div class="col-xl-6">
                            <label for="MaCodeSanPham" class="form-label">Mã sản phẩm <span class="text-danger">*</span></label>
                            <input asp-for="MaCodeSanPham" class="form-control" placeholder="Nhập mã sản phẩm">
                            <span asp-validation-for="MaCodeSanPham" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="TenSanPham" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                            <input asp-for="TenSanPham" class="form-control" placeholder="Nhập tên sản phẩm">
                            <span asp-validation-for="TenSanPham" class="text-danger"></span>
                        </div>
                        <div class="col-xl-12">
                            <label for="MoTaNgan" class="form-label">Mô tả ngắn</label>
                            <textarea asp-for="MoTaNgan" class="form-control" rows="2" placeholder="Mô tả ngắn về sản phẩm"></textarea>
                            <span asp-validation-for="MoTaNgan" class="text-danger"></span>
                        </div>
                        <div class="col-xl-12">
                            <label for="MoTaChiTiet" class="form-label">Mô tả chi tiết</label>
                            <textarea asp-for="MoTaChiTiet" class="form-control" rows="5" placeholder="Mô tả chi tiết về sản phẩm"></textarea>
                            <span asp-validation-for="MoTaChiTiet" class="text-danger"></span>
                            <small class="text-muted">Có thể sử dụng HTML để định dạng nội dung</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Giá và kho hàng</div>
                </div>
                <div class="card-body">
                    <div class="row gy-3">
                        <div class="col-xl-6">
                            <label for="GiaGoc" class="form-label">Giá gốc <span class="text-danger">*</span></label>
                            <input asp-for="GiaGoc" type="number" class="form-control" placeholder="0">
                            <span asp-validation-for="GiaGoc" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="GiaKhuyenMai" class="form-label">Giá khuyến mãi</label>
                            <input asp-for="GiaKhuyenMai" type="number" class="form-control" placeholder="0">
                            <span asp-validation-for="GiaKhuyenMai" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="SoLuongTonKho" class="form-label">Số lượng tồn kho <span class="text-danger">*</span></label>
                            <input asp-for="SoLuongTonKho" type="number" class="form-control" placeholder="0">
                            <span asp-validation-for="SoLuongTonKho" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="SoLuongToiThieu" class="form-label">Số lượng tối thiểu <span class="text-danger">*</span></label>
                            <input asp-for="SoLuongToiThieu" type="number" class="form-control" placeholder="0">
                            <span asp-validation-for="SoLuongToiThieu" class="text-danger"></span>
                            <small class="text-muted">Cảnh báo khi tồn kho thấp hơn mức này</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Thông số kỹ thuật</div>
                </div>
                <div class="card-body">
                    <div class="row gy-3">
                        <div class="col-xl-6">
                            <label for="TrongLuong" class="form-label">Trọng lượng (gram)</label>
                            <input asp-for="TrongLuong" type="number" step="0.01" class="form-control" placeholder="0">
                            <span asp-validation-for="TrongLuong" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="KichThuoc" class="form-label">Kích thước</label>
                            <input asp-for="KichThuoc" class="form-control" placeholder="Dài x Rộng x Cao">
                            <span asp-validation-for="KichThuoc" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="MauSac" class="form-label">Màu sắc</label>
                            <input asp-for="MauSac" class="form-control" placeholder="Nhập màu sắc">
                            <span asp-validation-for="MauSac" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="ChatLieu" class="form-label">Chất liệu</label>
                            <input asp-for="ChatLieu" class="form-control" placeholder="Nhập chất liệu">
                            <span asp-validation-for="ChatLieu" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Phân loại</div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="MaDanhMuc" class="form-label">Danh mục <span class="text-danger">*</span></label>
                        <select asp-for="MaDanhMuc" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">Chọn danh mục</option>
                        </select>
                        <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="MaThuongHieu" class="form-label">Thương hiệu <span class="text-danger">*</span></label>
                        <select asp-for="MaThuongHieu" class="form-select" asp-items="ViewBag.Brands">
                            <option value="">Chọn thương hiệu</option>
                        </select>
                        <span asp-validation-for="MaThuongHieu" class="text-danger"></span>
                    </div>
                    <div class="mb-0">
                        <label class="form-label">Trạng thái</label>
                        <div class="form-check">
                            <input asp-for="TrangThaiHoatDong" class="form-check-input" type="checkbox">
                            <label class="form-check-label" for="TrangThaiHoatDong">
                                Hoạt động
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Hình ảnh sản phẩm</div>
                </div>
                <div class="card-body">
                    @if (Model.ExistingImages != null && Model.ExistingImages.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label">Hình ảnh hiện tại</label>
                            <div class="row g-2" id="existingImages">
                                @foreach (var image in Model.ExistingImages)
                                {
                                    <div class="col-6" id="image-@image.Id">
                                        <div class="position-relative">
                                            <img src="@image.DuongDanHinhAnh" class="img-fluid rounded" alt="Product">
                                            @if (image.LaHinhAnhChinh)
                                            {
                                                <span class="badge bg-primary position-absolute top-0 start-0 m-1">Ảnh chính</span>
                                            }
                                            <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1"
                                                    onclick="deleteImage(@image.Id)">
                                                <i class="ri-delete-bin-line"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label for="Images" class="form-label">Thêm hình ảnh mới</label>
                        <input type="file" name="Images" class="form-control" multiple accept="image/*" id="imageInput">
                        <small class="text-muted">Có thể chọn nhiều hình ảnh</small>
                    </div>
                    <div id="imagePreview" class="row g-2"></div>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">SEO</div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="TieuDeSEO" class="form-label">Tiêu đề SEO</label>
                        <input asp-for="TieuDeSEO" class="form-control" placeholder="Tiêu đề cho SEO">
                        <span asp-validation-for="TieuDeSEO" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="MoTaSEO" class="form-label">Mô tả SEO</label>
                        <textarea asp-for="MoTaSEO" class="form-control" rows="2" placeholder="Mô tả cho SEO"></textarea>
                        <span asp-validation-for="MoTaSEO" class="text-danger"></span>
                    </div>
                    <div class="mb-0">
                        <label for="TuKhoaSEO" class="form-label">Từ khóa SEO</label>
                        <input asp-for="TuKhoaSEO" class="form-control" placeholder="Từ khóa, phân cách bởi dấu phẩy">
                        <span asp-validation-for="TuKhoaSEO" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-wave">
                    <i class="ri-save-line me-1"></i> Cập nhật sản phẩm
                </button>
                <a asp-action="Index" class="btn btn-light btn-wave">
                    <i class="ri-arrow-left-line me-1"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Image preview for new images
        document.getElementById('imageInput').addEventListener('change', function(e) {
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = '';

            if (this.files) {
                Array.from(this.files).forEach((file, index) => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const col = document.createElement('div');
                        col.className = 'col-6';
                        col.innerHTML = `
                            <div class="position-relative">
                                <img src="${e.target.result}" class="img-fluid rounded" alt="Preview">
                                <span class="badge bg-success position-absolute top-0 start-0 m-1">Mới</span>
                            </div>
                        `;
                        preview.appendChild(col);
                    }
                    reader.readAsDataURL(file);
                });
            }
        });

        // Delete existing image
        function deleteImage(imageId) {
            if (confirm('Bạn có chắc chắn muốn xóa hình ảnh này?')) {
                fetch('@Url.Action("DeleteImage", "Product", new { area = "Admin" })/' + imageId, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById('image-' + imageId).remove();

                        // Show success message
                        const alert = document.createElement('div');
                        alert.className = 'alert alert-success alert-dismissible fade show';
                        alert.innerHTML = `
                            <i class="ri-check-line me-1"></i> ${data.message}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        `;
                        document.querySelector('.page-header-breadcrumb').insertAdjacentElement('afterend', alert);

                        setTimeout(() => alert.remove(), 3000);
                    } else {
                        alert('Lỗi: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Có lỗi xảy ra khi xóa hình ảnh');
                    console.error('Error:', error);
                });
            }
        }
    </script>
}
