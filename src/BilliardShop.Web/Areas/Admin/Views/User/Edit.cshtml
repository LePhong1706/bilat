@model UserViewModel
@{
    ViewData["Title"] = "Sửa người dùng";
}

<div class="page-header-breadcrumb mb-3">
    <div class="d-flex align-items-center justify-content-between">
        <h1 class="page-title fw-medium fs-18 mb-0">Sửa người dùng</h1>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Người dùng</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sửa</li>
        </ol>
    </div>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-xl-8">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Thông tin tài khoản</div>
                </div>
                <div class="card-body">
                    <div class="row gy-3">
                        <div class="col-xl-6">
                            <label for="TenDangNhap" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập">
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Thông tin cá nhân</div>
                </div>
                <div class="card-body">
                    <div class="row gy-3">
                        <div class="col-xl-6">
                            <label for="Ho" class="form-label">Họ</label>
                            <input asp-for="Ho" class="form-control" placeholder="Nhập họ">
                            <span asp-validation-for="Ho" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="Ten" class="form-label">Tên</label>
                            <input asp-for="Ten" class="form-control" placeholder="Nhập tên">
                            <span asp-validation-for="Ten" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="SoDienThoai" class="form-label">Số điện thoại</label>
                            <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại">
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="NgaySinh" class="form-label">Ngày sinh</label>
                            <input asp-for="NgaySinh" type="date" class="form-control">
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card custom-card bg-warning-transparent">
                <div class="card-header">
                    <div class="card-title">Đổi mật khẩu</div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="ri-information-line me-1"></i> Để đổi mật khẩu, vui lòng sử dụng chức năng <a asp-action="ResetPassword" asp-route-id="@Model.Id" class="alert-link">Reset mật khẩu</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Vai trò</div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="MaVaiTro" class="form-label">Chọn vai trò <span class="text-danger">*</span></label>
                        <select asp-for="MaVaiTro" class="form-select" asp-items="ViewBag.Roles">
                            <option value="">Chọn vai trò</option>
                        </select>
                        <span asp-validation-for="MaVaiTro" class="text-danger"></span>
                    </div>
                    <div class="mb-0">
                        <label class="form-label">Trạng thái</label>
                        <div class="form-check">
                            <input asp-for="TrangThaiHoatDong" class="form-check-input" type="checkbox">
                            <label class="form-check-label" for="TrangThaiHoatDong">
                                Hoạt động
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Thông tin khác</div>
                </div>
                <div class="card-body">
                    <p class="mb-1"><small class="text-muted">Ngày tạo:</small><br>
                        <strong>@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</strong>
                    </p>
                    @if (Model.NgayCapNhatCuoi.HasValue)
                    {
                        <p class="mb-0"><small class="text-muted">Cập nhật cuối:</small><br>
                            <strong>@Model.NgayCapNhatCuoi.Value.ToString("dd/MM/yyyy HH:mm")</strong>
                        </p>
                    }
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-wave">
                    <i class="ri-save-line me-1"></i> Cập nhật người dùng
                </button>
                <a asp-action="Index" class="btn btn-light btn-wave">
                    <i class="ri-arrow-left-line me-1"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
