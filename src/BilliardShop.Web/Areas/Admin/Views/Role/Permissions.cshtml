@model RolePermissionsViewModel
@{
    ViewData["Title"] = "Phân quyền";
}

<div class="page-header-breadcrumb mb-3">
    <div class="d-flex align-items-center justify-content-between">
        <h1 class="page-title fw-medium fs-18 mb-0">Phân quyền - @Model.RoleName</h1>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Vai trò</a></li>
            <li class="breadcrumb-item active" aria-current="page">Phân quyền</li>
        </ol>
    </div>
</div>

<form asp-action="Permissions" method="post">
    <input type="hidden" name="id" value="@Model.RoleId" />

    <div class="row">
        <div class="col-xl-12">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Chọn quyền cho vai trò: <strong>@Model.RoleName</strong></div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <button type="button" class="btn btn-sm btn-primary" onclick="selectAll()">
                            <i class="ri-checkbox-multiple-line me-1"></i> Chọn tất cả
                        </button>
                        <button type="button" class="btn btn-sm btn-secondary" onclick="deselectAll()">
                            <i class="ri-checkbox-blank-line me-1"></i> Bỏ chọn tất cả
                        </button>
                    </div>

                    @foreach (var group in Model.PermissionGroups)
                    {
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">
                                        <i class="ri-folder-line me-1"></i> @group.GroupName
                                    </h6>
                                    <div>
                                        <button type="button" class="btn btn-sm btn-primary" onclick="selectGroup('@group.GroupName')">
                                            Chọn tất cả
                                        </button>
                                        <button type="button" class="btn btn-sm btn-secondary" onclick="deselectGroup('@group.GroupName')">
                                            Bỏ chọn
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var permission in group.Permissions)
                                    {
                                        <div class="col-xl-3 col-lg-4 col-md-6 mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input permission-checkbox"
                                                       type="checkbox"
                                                       name="selectedPermissions"
                                                       value="@permission.Id"
                                                       id="perm_@permission.Id"
                                                       data-group="@group.GroupName"
                                                       @(Model.AssignedPermissionIds.Contains(permission.Id) ? "checked" : "")>
                                                <label class="form-check-label" for="perm_@permission.Id">
                                                    <strong>@permission.HanhDong</strong>
                                                    <br><small class="text-muted">@permission.TenQuyen</small>
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    @if (!Model.PermissionGroups.Any())
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="ri-information-line me-1"></i> Chưa có quyền nào trong hệ thống. Vui lòng chạy seed data để tạo quyền mặc định.
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-light">
                            <i class="ri-arrow-left-line me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="ri-save-line me-1"></i> Lưu phân quyền
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Select all permissions
        function selectAll() {
            document.querySelectorAll('.permission-checkbox').forEach(function(checkbox) {
                checkbox.checked = true;
            });
        }

        // Deselect all permissions
        function deselectAll() {
            document.querySelectorAll('.permission-checkbox').forEach(function(checkbox) {
                checkbox.checked = false;
            });
        }

        // Select all permissions in a group
        function selectGroup(groupName) {
            document.querySelectorAll('.permission-checkbox[data-group="' + groupName + '"]').forEach(function(checkbox) {
                checkbox.checked = true;
            });
        }

        // Deselect all permissions in a group
        function deselectGroup(groupName) {
            document.querySelectorAll('.permission-checkbox[data-group="' + groupName + '"]').forEach(function(checkbox) {
                checkbox.checked = false;
            });
        }

        // Show count of selected permissions
        document.querySelectorAll('.permission-checkbox').forEach(function(checkbox) {
            checkbox.addEventListener('change', updateCount);
        });

        function updateCount() {
            const total = document.querySelectorAll('.permission-checkbox').length;
            const selected = document.querySelectorAll('.permission-checkbox:checked').length;

            // You can add a badge to show count if needed
            console.log(`Selected ${selected} of ${total} permissions`);
        }

        // Initial count
        updateCount();
    </script>
}
