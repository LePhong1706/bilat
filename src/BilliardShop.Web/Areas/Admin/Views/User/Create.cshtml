@model UserViewModel
@{
    ViewData["Title"] = "Thêm người dùng";
}

<div class="page-header-breadcrumb mb-3">
    <div class="d-flex align-items-center justify-content-between">
        <h1 class="page-title fw-medium fs-18 mb-0">Thêm người dùng</h1>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Người dùng</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
        </ol>
    </div>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-xl-8">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Thông tin tài khoản</div>
                </div>
                <div class="card-body">
                    <div class="row gy-3">
                        <div class="col-xl-6">
                            <label for="TenDangNhap" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập">
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="Password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Thông tin cá nhân</div>
                </div>
                <div class="card-body">
                    <div class="row gy-3">
                        <div class="col-xl-6">
                            <label for="Ho" class="form-label">Họ</label>
                            <input asp-for="Ho" class="form-control" placeholder="Nhập họ">
                            <span asp-validation-for="Ho" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="Ten" class="form-label">Tên</label>
                            <input asp-for="Ten" class="form-control" placeholder="Nhập tên">
                            <span asp-validation-for="Ten" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="SoDienThoai" class="form-label">Số điện thoại</label>
                            <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại">
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6">
                            <label for="NgaySinh" class="form-label">Ngày sinh</label>
                            <input asp-for="NgaySinh" type="date" class="form-control">
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Vai trò</div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="MaVaiTro" class="form-label">Chọn vai trò <span class="text-danger">*</span></label>
                        <select asp-for="MaVaiTro" class="form-select" asp-items="ViewBag.Roles">
                            <option value="">Chọn vai trò</option>
                        </select>
                        <span asp-validation-for="MaVaiTro" class="text-danger"></span>
                    </div>
                    <div class="mb-0">
                        <label class="form-label">Trạng thái</label>
                        <div class="form-check">
                            <input asp-for="TrangThaiHoatDong" class="form-check-input" type="checkbox">
                            <label class="form-check-label" for="TrangThaiHoatDong">
                                Hoạt động
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-wave">
                    <i class="ri-save-line me-1"></i> Lưu người dùng
                </button>
                <a asp-action="Index" class="btn btn-light btn-wave">
                    <i class="ri-arrow-left-line me-1"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Password strength indicator
        document.querySelector('[name="Password"]').addEventListener('input', function() {
            const password = this.value;
            let strength = 0;

            if (password.length >= 8) strength++;
            if (password.match(/[a-z]+/)) strength++;
            if (password.match(/[A-Z]+/)) strength++;
            if (password.match(/[0-9]+/)) strength++;
            if (password.match(/[^a-zA-Z0-9]+/)) strength++;

            const colors = ['danger', 'warning', 'info', 'success', 'success'];
            const labels = ['Rất yếu', 'Yếu', 'Trung bình', 'Mạnh', 'Rất mạnh'];

            let indicator = this.parentElement.querySelector('.password-strength');
            if (!indicator) {
                indicator = document.createElement('div');
                indicator.className = 'password-strength mt-1';
                this.parentElement.appendChild(indicator);
            }

            if (password.length > 0) {
                indicator.innerHTML = `<small class="text-${colors[strength - 1]}">Độ mạnh: ${labels[strength - 1]}</small>`;
            } else {
                indicator.innerHTML = '';
            }
        });
    </script>
}
