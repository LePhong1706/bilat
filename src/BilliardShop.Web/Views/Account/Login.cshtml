@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

@section Styles {
    <style>
        body {
            background-color: #1E1F23;
            color: #EEEEEE;
        }

        .auth-container {
            max-width: 500px;
            margin: 80px auto;
            padding: 20px;
        }

        .auth-card {
            background-color: #25262B;
            border: 1px solid #2A2B30;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        .auth-title {
            color: #FFFFFF;
            font-weight: 700;
            font-size: 32px;
            margin-bottom: 10px;
            text-align: center;
        }

        .auth-subtitle {
            color: #808080;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-control, .form-select {
            background-color: #1E1F23;
            border: 1px solid #2A2B30;
            color: #EEEEEE;
            border-radius: 8px;
            padding: 14px 18px;
            font-size: 15px;
        }

        .form-control:focus, .form-select:focus {
            background-color: #1E1F23;
            border-color: #DF3B34;
            color: #EEEEEE;
            box-shadow: 0 0 0 3px rgba(223, 59, 52, 0.1);
        }

        .form-control::placeholder {
            color: #666;
        }

        .form-label {
            color: #FFFFFF;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 14px;
        }

        .form-check-input {
            background-color: #1E1F23;
            border-color: #2A2B30;
        }

        .form-check-input:checked {
            background-color: #DF3B34;
            border-color: #DF3B34;
        }

        .form-check-label {
            color: #CCCCCC;
        }

        .btn-auth {
            background-color: #DF3B34;
            color: #FFFFFF;
            font-weight: 700;
            text-transform: uppercase;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            display: block;
            width: 100%;
            text-decoration: none;
            transition: all 0.3s;
            border: none;
            font-size: 16px;
            letter-spacing: 0.5px;
        }

        .btn-auth:hover {
            background-color: #C22F28;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(223, 59, 52, 0.4);
        }

        .auth-link {
            color: #DF3B34;
            text-decoration: none;
            font-weight: 600;
        }

        .auth-link:hover {
            color: #C22F28;
            text-decoration: underline;
        }

        .divider {
            text-align: center;
            margin: 25px 0;
            position: relative;
        }

        .divider::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
            height: 1px;
            background-color: #2A2B30;
        }

        .divider span {
            background-color: #25262B;
            padding: 0 15px;
            position: relative;
            color: #808080;
        }

        .alert {
            border-radius: 8px;
            border: none;
        }

        .alert-danger {
            background-color: rgba(223, 59, 52, 0.15);
            color: #FF6B6B;
            border: 1px solid rgba(223, 59, 52, 0.3);
        }

        .alert-success {
            background-color: rgba(52, 211, 153, 0.15);
            color: #34D399;
            border: 1px solid rgba(52, 211, 153, 0.3);
        }

        .text-muted {
            color: #808080 !important;
        }
    </style>
}

<div class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Đăng nhập</h1>
        <p class="auth-subtitle">Chào mừng trở lại! Vui lòng đăng nhập vào tài khoản của bạn</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul class="mb-0 ps-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="mb-4">
                <label asp-for="UsernameOrEmail" class="form-label">Tên đăng nhập hoặc Email</label>
                <input asp-for="UsernameOrEmail" class="form-control" placeholder="Nhập tên đăng nhập hoặc email" autofocus />
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label">
                        Ghi nhớ đăng nhập
                    </label>
                </div>
                <a href="#" class="auth-link small">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn-auth">Đăng nhập</button>
        </form>

        <div class="divider">
            <span>hoặc</span>
        </div>

        <p class="text-center text-muted mb-0">
            Chưa có tài khoản? <a asp-action="Register" class="auth-link">Đăng ký ngay</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
