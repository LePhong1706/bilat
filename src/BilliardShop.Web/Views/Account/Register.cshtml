@model RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

@section Styles {
    <style>
        body {
            background-color: #1E1F23;
            color: #EEEEEE;
        }

        .auth-container {
            max-width: 600px;
            margin: 60px auto 80px;
            padding: 20px;
        }

        .auth-card {
            background-color: #25262B;
            border: 1px solid #2A2B30;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        .auth-title {
            color: #FFFFFF;
            font-weight: 700;
            font-size: 32px;
            margin-bottom: 10px;
            text-align: center;
        }

        .auth-subtitle {
            color: #808080;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-control, .form-select {
            background-color: #1E1F23;
            border: 1px solid #2A2B30;
            color: #EEEEEE;
            border-radius: 8px;
            padding: 14px 18px;
            font-size: 15px;
        }

        .form-control:focus, .form-select:focus {
            background-color: #1E1F23;
            border-color: #DF3B34;
            color: #EEEEEE;
            box-shadow: 0 0 0 3px rgba(223, 59, 52, 0.1);
        }

        .form-control::placeholder {
            color: #666;
        }

        .form-label {
            color: #FFFFFF;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 14px;
        }

        .btn-auth {
            background-color: #DF3B34;
            color: #FFFFFF;
            font-weight: 700;
            text-transform: uppercase;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            display: block;
            width: 100%;
            text-decoration: none;
            transition: all 0.3s;
            border: none;
            font-size: 16px;
            letter-spacing: 0.5px;
        }

        .btn-auth:hover {
            background-color: #C22F28;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(223, 59, 52, 0.4);
        }

        .auth-link {
            color: #DF3B34;
            text-decoration: none;
            font-weight: 600;
        }

        .auth-link:hover {
            color: #C22F28;
            text-decoration: underline;
        }

        .divider {
            text-align: center;
            margin: 25px 0;
            position: relative;
        }

        .divider::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
            height: 1px;
            background-color: #2A2B30;
        }

        .divider span {
            background-color: #25262B;
            padding: 0 15px;
            position: relative;
            color: #808080;
        }

        .alert {
            border-radius: 8px;
            border: none;
        }

        .alert-danger {
            background-color: rgba(223, 59, 52, 0.15);
            color: #FF6B6B;
            border: 1px solid rgba(223, 59, 52, 0.3);
        }

        .text-muted {
            color: #808080 !important;
        }

        .text-danger {
            color: #FF6B6B !important;
            font-size: 13px;
        }

        .form-select option {
            background-color: #1E1F23;
            color: #EEEEEE;
        }
    </style>
}

<div class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Đăng ký</h1>
        <p class="auth-subtitle">Tạo tài khoản mới để bắt đầu mua sắm</p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul class="mb-0 ps-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="Register" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Ho" class="form-label">Họ *</label>
                    <input asp-for="Ho" class="form-control" placeholder="Nhập họ" />
                    <span asp-validation-for="Ho" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Ten" class="form-label">Tên *</label>
                    <input asp-for="Ten" class="form-control" placeholder="Nhập tên" />
                    <span asp-validation-for="Ten" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="TenDangNhap" class="form-label">Tên đăng nhập *</label>
                <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email *</label>
                <input asp-for="Email" class="form-control" placeholder="example@email.com" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MatKhau" class="form-label">Mật khẩu *</label>
                    <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" type="password" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="XacNhanMatKhau" class="form-label">Xác nhận mật khẩu *</label>
                    <input asp-for="XacNhanMatKhau" class="form-control" placeholder="Nhập lại mật khẩu" type="password" />
                    <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="SoDienThoai" class="form-label">Số điện thoại</label>
                <input asp-for="SoDienThoai" class="form-control" placeholder="0123456789" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
                    <input asp-for="NgaySinh" class="form-control" type="date" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-4">
                    <label asp-for="GioiTinh" class="form-label">Giới tính</label>
                    <select asp-for="GioiTinh" class="form-select">
                        <option value="">-- Chọn giới tính --</option>
                        <option value="M">Nam</option>
                        <option value="F">Nữ</option>
                        <option value="K">Khác</option>
                    </select>
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn-auth">Đăng ký</button>
        </form>

        <div class="divider">
            <span>hoặc</span>
        </div>

        <p class="text-center text-muted mb-0">
            Đã có tài khoản? <a asp-action="Login" class="auth-link">Đăng nhập ngay</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
